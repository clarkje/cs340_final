<fieldset>
<legend>Add Copy</legend>
<form method="post" action="modAlbum.php" class="form-horizontal">
  <input type="hidden" name="action" value="addCopy">
  <input type="hidden" name="album_id" value="{{album_id}}">
  <div class="form-group">
    <div class="col-sm-2">
      <label for="ainstance_location" class="control-label">Location</label>
    </div>
    <div class="col-sm-10">
      <input id="ainstance_location " class="form-control" name="ainstance_location" value="{{ainstance_location}}" placeholder="Copy Location">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
      <label for="ainstance_status" class="control-label">Status</label>
    </div>
    <div class="col-sm-10">
      <select class="form-inline" name="ainstance_status">
        {{#astatus}}
          <option value="{{astatus_id}}">{{description}}</option>
        {{/astatus}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-primary btn-sm" value="Add Copy">
    </div>
  </div>

</form>
</fieldset>
