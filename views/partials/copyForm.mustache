<fieldset>
  <legend>Update Copy</legend>
  <form method="post" action="modCopy.php" class="form-horizontal">
    <input type="hidden" name="action" value="updateCopy">
    <input type="hidden" name="ainstance_id" value="{{ainstance.ainstance_id}}">
    <input type="hidden" name="album_id" value="{{album_id}}">

    <div class="form-group">
      <label class="col-sm-2 control-label" for="ainstance_location">Location</label>
      <div class="col-sm-10">
        <input id="ainstance_location" class="form-control" name="ainstance_location" value="{{ainstance.ainstance_location}}" placeholder="Copy Location">
      </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" for="ainstance_status">Status</label>
        <div class="col-sm-10">
          <select class="form-control" name="ainstance_status">
            {{#astatus}}
              <option value="{{astatus_id}}">{{description}}</option>
            {{/astatus}}
          </select>
        </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <input type="submit" class="btn btn-primary btn-sm" value="Update Copy">
      </div>
      <div class="col-sm-1">
        <a href="modCopy.php?action=deleteCopy&album_id={{album_id}}&ainstance_id={{ainstance.ainstance_id}}" class="btn btn-danger btn-sm">Delete Copy</a>
      </div>
    </div>
  </form>
</fieldset>
