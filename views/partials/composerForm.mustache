<fieldset>
  <legend>{{#composer}}Update{{/composer}}{{^composer}}Add{{/composer}} Composer</legend>
  <form method="post" action="modComposer.php" class="form-horizontal">
    <input type="hidden" name="action" value="{{#composer}}updateComposer{{/composer}}{{^composer}}addComposer{{/composer}}">
    {{#composer}}
    <input type="hidden" name="composer_id" value="{{composer.composer_id}}">
    {{/composer}}

    <div class="form-group">
      <label class="col-sm-2 control-label" for="composer_first_name">First Name</label>
      <div class="col-sm-10">
        <input id="artist_name" class="form-control" name="composer_first_name" value="{{composer.composer_first_name}}" placeholder="First Name">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="composer_last_name">Last Name</label>
      <div class="col-sm-10">
        <input id="artist_name" class="form-control" name="composer_last_name" value="{{composer.composer_last_name}}" placeholder="Last Name">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <input type="submit" class="btn btn-primary btn-sm" value="{{#composer}}Update{{/composer}}{{^composer}}Add{{/composer}} Composer">
      </div>
      <div class="col-sm-1">
        <a href="modComposer.php?action=deleteComposer&composer_id={{composer.composer_id}}" class="btn btn-danger btn-sm">Delete Composer</a>
      </div>
    </div>
  </form>
</fieldset>
