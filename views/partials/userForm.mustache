<fieldset>
  <legend>{{#user}}Update{{/user}}{{^user}}Add{{/user}} User</legend>
  <form method="post" action="modUser.php" class="form-horizontal">
    <input type="hidden" name="action" value="{{#user}}updateUser{{/user}}{{^user}}addUser{{/user}}">
    {{#user}}
    <input type="hidden" name="user_id" value="{{user_id}}">
    {{/user}}

    <div class="form-group">
      <div class="col-sm-2">
        <label class="control-label" for="user_first_name">First Name</label>
      </div>
      <div class="col-sm-10">
        <input id="user_first_name" class="form-control" name="user_first_name" value="{{user.first_name}}" placeholder="First Name">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <label class="control-label" for="user_last_name">Last Name</label>
      </div>
      <div class="col-sm-10">
        <input id="user_first_name" class="form-control" name="user_last_name" value="{{user.last_name}}" placeholder="Last Name">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <label class="control-label" for="user_email">Email</label>
      </div>
      <div class="col-sm-10">
        <input id="user_email" class="form-control" name="user_email" value="{{user.email}}" placeholder="Email Address">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <label for="utype">Type: </label>
      </div>
      <div class="col-sm-10">
        <!-- TODO: JavaScript function that selects the chosen option element when editing -->
        <select class="form-control" name="utype">
          {{#utypes}}
            <option value={{utype_id}}>{{utype_description}}</option>
          {{/utypes}}
        </select>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <label for="ustatus">Status: </label>
      </div>
      <div class="col-sm-10">
        <!-- TODO: JavaScript function that selects the chosen option element when editing -->
        <select class="form-control" name="ustatus">
          {{#ustatuses}}
            <option value={{ustatus_id}}>{{ustatus_description}}</option>
          {{/ustatuses}}
        </select>
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <input type="submit" class="btn btn-primary btn-sm" value="{{#user}}Update{{/user}}{{^user}}Add{{/user}} User">
      </div>
      <div class="col-sm-1">
        <a href="modUser.php?action=deleteUser&user_id={{user.user_id}}" class="btn btn-danger btn-sm">Delete User</a>
      </div>
    </div>
  </form>
</fieldset>
